<div class="logo">
  <i class="fa fa-truck" aria-hidden="true"></i>
</div>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h1 class="form-signin-heading">ShipShare</h1>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control"%>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
    </div>

  <button class="btn btn-lg btn-primary btn-block" type="submit">
    <%= link_to "Log in", new_session_path(resource_name) %><br />
  </button>

  <button class="btn btn-lg btn-primary btn-block" type="submit">
    <%= link_to "Sign up", new_user_registration_url%><br />
  </button>

  <div class="center">
    <%= link_to "forgot your password?", new_password_path(resource_name) %><br />
  </div>
<% end %>

</div>
