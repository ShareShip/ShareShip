<div class="logo">
  <i class="fa fa-truck" aria-hidden="true"></i>
</div>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= devise_error_messages! %>
  <h1 class="form-signin-heading">Register</h1>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.email_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.text_field :password_confirmation, autocomplete: "off", placeholder: "Address Line 1", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.text_field :password_confirmation, autocomplete: "off", placeholder: "Address Line 2", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.text_field :password_confirmation, autocomplete: "off", placeholder: "State/Province", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.text_field :password_confirmation, autocomplete: "off", placeholder: "Zip Code/Postal Code", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.text_field :password_confirmation, autocomplete: "off", placeholder: "Telephone Number", class: "form-control" %>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">
      <%= link_to "Log in", new_session_path(resource_name) %><br />
    </button>
  <% end %>

</div>
